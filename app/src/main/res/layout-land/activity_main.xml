<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@android:color/black">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:id="@+id/Screen"
        android:gravity="fill_vertical|end|right"
        android:textSize="30dp"
        android:textColor="#ffffffff" />



    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="DEL"
                android:layout_weight="2"
                android:onClick="Delete_All"
                android:textSize="20dp"
                android:id="@+id/del"
                android:textColor="#ffffffff" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="+/-"
                android:layout_weight="1"
                android:onClick="BorrarUno"
                android:textSize="20dp"
                android:id="@+id/sign"
                android:textColor="#ffffffff" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="/"
                android:tag="/"
                android:layout_weight="1"
                android:onClick="Operation"
                android:textSize="20dp"
                android:id="@+id/Div"
                android:textColor="#ffffffff" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >


            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:tag="7"
                android:text="7"
                android:onClick="Write"
                android:layout_weight="1"
                android:textSize="20dp"
                android:id="@+id/Sieben"
                android:textColor="#ffffffff" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="8"
                android:tag="8"
                android:onClick="Write"
                android:layout_weight="1"
                android:textSize="20dp"
                android:id="@+id/Acht"
                android:textColor="#ffffffff" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="9"
                android:tag="9"
                android:onClick="Write"
                android:layout_weight="1"
                android:textSize="20dp"
                android:id="@+id/Neun"
                android:textColor="#ffffffff" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="*"
                android:tag="*"
                android:layout_weight="1"
                android:onClick="Operation"
                android:textSize="20dp"
                android:id="@+id/Mult"
                android:textColor="#ffffffff" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >


            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="4"
                android:tag="4"
                android:onClick="Write"
                android:layout_weight="1"
                android:textSize="20dp"
                android:id="@+id/Vier"
                android:textColor="#ffffffff" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="5"
                android:tag="5"
                android:onClick="Write"
                android:layout_weight="1"
                android:textSize="20dp"
                android:id="@+id/FÃ¼nf"
                android:textColor="#ffffffff" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="6"
                android:tag="6"
                android:onClick="Write"
                android:layout_weight="1"
                android:textSize="20dp"
                android:id="@+id/Sechs"
                android:textColor="#ffffffff" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:tag="-"
                android:layout_weight="1"
                android:onClick="Operation"
                android:textSize="20dp"
                android:id="@+id/Minus"
                android:textColor="#ffffffff" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >


            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:tag="1"
                android:onClick="Write"
                android:layout_weight="1"
                android:textSize="20dp"
                android:id="@+id/Ein"
                android:textColor="#ffffffff" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:tag="2"
                android:onClick="Write"
                android:layout_weight="1"
                android:textSize="20dp"
                android:id="@+id/Zwei"
                android:textColor="#ffffffff" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="3"
                android:tag="3"
                android:onClick="Write"
                android:layout_weight="1"
                android:textSize="20dp"
                android:id="@+id/Drei"
                android:textColor="#ffffffff" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:tag="+"
                android:layout_weight="1"
                android:onClick="Operation"
                android:textSize="20dp"
                android:id="@+id/Add"
                android:textColor="#ffffffff" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >


            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_weight="2"
                android:tag="0"
                android:onClick="Write"
                android:textSize="20dp"
                android:id="@+id/Null"
                android:textColor="#ffffffff" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="."
                android:tag="."
                android:layout_weight="1"
                android:onClick="Write"
                android:textSize="20dp"
                android:id="@+id/dot"
                android:textColor="#ffffffff" />


            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="="
                android:layout_weight="1"
                android:onClick="Compute"
                android:textSize="20dp"
                android:id="@+id/Compute"
                android:textColor="#ffffffff" />

        </TableRow>

    </TableLayout>

</LinearLayout>